{% schema %}
{
  "name": "Custom Banner",
  "settings": [
    {
      "type": "text",
      "id": "shop_name",
      "label": "Shop Name",
      "default": "TISSO VISON"
    },
    {
      "type": "text",
      "id": "banner_message",
      "label": "Banner Message",
      "default": "Find the ideal gift for your loved ones."
    },
    {
      "type": "text",
      "id": "main_title",
      "label": "Main Title",
      "default": "The Gift Guide"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Discover Joy: Your Ultimate Holiday Gift Destination."
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "SHOP NOW →"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "image_picker",
      "id": "banner_image",
      "label": "Banner Background Image"
    }
  ],
  "presets": [
    {
      "name": "Custom Banner",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<!-- Responsive Banner Section -->
<div class="banner-section">
  <!-- Header -->
  <header class="custom-header">
    <div class="shop-name">{{ section.settings.shop_name }}</div>
    <div class="choose-gift-header">
      <a href="{{ section.settings.button_link }}" class="choose-gift-button">
        CHOOSE GIFT →
      </a>
    </div>
  </header>

  <!-- Desktop & Mobile Banner -->
  <div class="banner-container">
    <!-- Text Section -->
    <div class="text-overlay">
      <h1 class="title">{{ section.settings.main_title }}</h1>
      <p class="subtitle">{{ section.settings.subtitle }}</p>
      <p class="description">{{ section.settings.description }}</p>
    </div>

    <!-- Banner Image -->
    <div class="banner-image-container">
      <img src="{{ section.settings.banner_image | image_url }}" alt="Banner" class="banner-image">
      <a href="{{ section.settings.button_link }}" class="shop-now-button">
        {{ section.settings.button_text }}
      </a>
    </div>
  </div>
</div>