<section class="custom-grid">
    <div class="grid-container">
        {% for product in collections["all"].products limit:6 %}
            <div class="grid-item" data-product-id="{{ product.id }}">
                <img src="{{ product.featured_image | img_url: 'large' }}" alt="{{ product.title }}">
                <button class="grid-popup-btn" data-product-id="{{ product.id }}">+</button>
            </div>
        {% endfor %}
    </div>

    <!-- Popup -->
    <div class="grid-popup-overlay">
        <div class="grid-popup-content">
            <button class="grid-close-popup">&times;</button>
            <img id="popup-image" src="" alt="">
            <h2 id="popup-title"></h2>
            <p id="popup-price"></p>
            <p id="popup-description"></p>
            
            <!-- Color Options -->
            <div class="popup-color">
                <label>Color:</label>
                <div id="color-options"></div>
            </div>

            <!-- Size Dropdown -->
            <div class="popup-size">
                <label>Size:</label>
                <select id="size-options">
                    <option>Choose your size</option>
                </select>
            </div>

            <button class="grid-add-to-cart">ADD TO CART â†’</button>
        </div>
    </div>
</section>
