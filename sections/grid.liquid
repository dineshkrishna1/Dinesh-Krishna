{% schema %}
{
  "name": "Custom Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    }
  ],
  "presets": [
    {
      "name": "Custom Section"
    }
  ]
}
{% endschema %}

<div class="custom-section">
  <h2>{{ section.settings.heading }}</h2>
  <img src="{{ section.settings.image | img_url: 'large' }}" alt="Custom Image">
</div>

<section class="custom-grid">
  <div class="grid-container">
    {% for product in collections['all'].products limit: 6 %}
      <div class="grid-item" data-product-id="{{ product.id }}" onclick="openPopup(this)">
        <img src="{{ product.featured_image | img_url: 'medium' }}" alt="{{ product.title }}">
      </div>
    {% endfor %}
  </div>
</section>

<div id="popup" class="popup">
  <div class="popup-content">
    <span class="close-btn" onclick="closePopup()">&times;</span>
    <img id="popup-image" src="" alt="Product">
    <h2 id="popup-title"></h2>
    <p id="popup-price"></p>
    <p id="popup-description"></p>

    <label>Color:</label>
    <div id="popup-colors"></div>

    <label>Size:</label>
    <select id="popup-sizes">
      <option>Select Size</option>
    </select>

    <button class="add-to-cart">ADD TO CART â†’</button>
  </div>
</div>
